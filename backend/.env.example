# ============================================
# BACKEND CONFIGURATION
# ============================================

# ============================================
# BINANCE API (Required for live trading)
# ============================================
# Get your API keys from: https://www.binance.com/en/my/settings/api-management
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here

# ============================================
# TELEGRAM BOT (Required for alerts)
# ============================================
# Create a bot with @BotFather on Telegram
# Get your chat ID by messaging @userinfobot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# ============================================
# SENTIMENT ANALYSIS APIs (Optional)
# ============================================

# Twitter/X API
# Get from: https://developer.twitter.com/
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# Reddit API
# Get from: https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
REDDIT_USER_AGENT=CryptoAI/1.0

# News API
# Get from: https://newsapi.org/
NEWS_API_KEY=your_news_api_key_here

# ============================================
# APPLICATION SETTINGS
# ============================================
FRONTEND_URL=http://localhost:3000

# Backend API URL for Telegram Bot
# Change this if running backend on different host/port
BACKEND_API_URL=http://localhost:8000

# Database
DATABASE_URL=sqlite:///./crypto_signals.db

# Cache TTL (seconds)
CACHE_TTL=60
SENTIMENT_CACHE_TTL=3600

# ============================================
# ML CONFIGURATION
# ============================================
SENTIMENT_ENABLED=true
USE_ENSEMBLE=true
ENSEMBLE_TYPE=voting
ENABLE_HYPERPARAMETER_TUNING=false

# ============================================
# RISK MANAGEMENT
# ============================================
MIN_LEVERAGE=1.0
MAX_LEVERAGE=10.0
DEFAULT_ACCOUNT_BALANCE=10000.0
RISK_PER_TRADE=0.02
MAX_PORTFOLIO_RISK=0.10
MAX_DRAWDOWN=0.20
